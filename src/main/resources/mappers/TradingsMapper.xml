<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.quantumsoft.koreasurvey.TradingsMapper">
<insert id="insertTradings" parameterType="kr.quantumsoft.koreasurvey.model.Tradings"
	useGeneratedKeys="true" keyProperty="id">
	INSERT INTO `tradings` (
		`userid`,
		`type`,
		`amount`
	) VALUES (
		#{userid},
		#{type},
		#{amount}
	)
</insert>
<select id="selectTradingsByUserId" parameterType="HashMap"
	resultType="kr.quantumsoft.koreasurvey.model.Tradings">
	SELECT *
	FROM `tradings`
	WHERE
		`userid` = #{userid}
		<if test="type != null">
		AND `type` = #{type}
		</if>
		<if test="from != null">
		AND `created` BETWEEN #{from} AND #{to} 
		</if>
	ORDER BY `id` DESC
</select>

	<select id="selectTradingsLimitByUserId" parameterType="HashMap"
			resultType="kr.quantumsoft.koreasurvey.model.Tradings">
		SELECT *
		FROM `tradings`
		WHERE
		`userid` = #{userid}
		<if test="type != null">
			AND `type` = #{type}
		</if>
		ORDER BY `id` DESC
		limit #{offset}, #{limit}
	</select>
</mapper>