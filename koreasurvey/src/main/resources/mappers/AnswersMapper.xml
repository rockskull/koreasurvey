<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.quantumsoft.koreasurvey.AnswersMapper">
<insert id="insertAnswers" parameterType="kr.quantumsoft.koreasurvey.model.Answers"
	useGeneratedKeys="true" keyProperty="id">
	INSERT INTO `answers` (
		`userid`,
		`surveyid`,
		`questionid`,
		`questioncontent`,
		`questiontype`,
		`answer`,
		`rewardpoint`
	) VALUES (
		#{userid},
		#{surveyid},
		#{questionid},
		#{questioncontent},
		#{questiontype},
		#{answer},
		#{rewardpoint}
	)
</insert>
<select id="selectAnswersByUserId" parameterType="Integer"
	resultType="kr.quantumsoft.koreasurvey.model.Answers">
	SELECT *
	FROM `answers`
	WHERE
		`userid` = #{userid} 
</select>
<select id="selectAnswersByUserIdGroupBySurveyId" parameterType="Integer"
	resultType="kr.quantumsoft.koreasurvey.model.Answers">
	SELECT *
	FROM `answers`
	WHERE
		`userid` = #{userid}
	GROUP BY `surveyid`
	ORDER BY `id` DESC; 
</select>
<select id="countAnswersUsers" parameterType="Integer"
	resultType="Integer">
	SELECT COUNT(*)
	FROM (
		SELECT COUNT(*) FROM `answers`
		WHERE
			`surveyid` = #{surveyid}
		GROUP BY `userid`
	) a
</select>
</mapper>